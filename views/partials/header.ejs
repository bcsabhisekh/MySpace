<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/login_app.css">
    <link rel="icon" href="/images/logo.png">
    <title>Resources</title>
</head>

<body>

    <!-- Header starts here -->
    <header>
        <!-- Navbar goes here -->
        <nav class="bg-white shadow-lg">
            <div class="max-w-8xl mx-auto px-3">
                <div class="flex justify-between">
                    <div class="flex space-x-7">
                        <div>
                            <!-- Website Logo -->
                            <a href="/" class="flex items-center py-4 px-2">
                                <img src="/images/logo.png" alt="MySpace Logo" class="h-12 w-12 mr-2">
                                <span class="font-seimbold text-gray-900 text-xl mr-4">MySpace</span>
                            </a>
                        </div>
                        <!-- Primary Navbar items -->
                        <div class="hidden md:flex items-center space-x-1">
                            <a href="/"
                                class="py-4 px-2 text-green-500  border-b-4 border-green-500 font-semibold">Resources</a>
                            <a href="/qa"
                                class="py-4 px-2 text-gray-700 font-semibold hover:text-green-500 transition duration-300">QA
                                Forum</a>
                            <a href="/article"
                                class="py-4 px-2 text-gray-700 font-semibold hover:text-green-500 transition duration-300">Technical
                                Article</a>
                            <a href="/schedule"
                                class="py-4 px-2 text-gray-700 font-semibold hover:text-green-500 transition duration-300">Schedule</a>
                            <a href="/event"
                                class="py-4 px-2 text-gray-700 font-semibold hover:text-green-500 transition duration-300">Events</a>
                            <a href="/about"
                                class="py-4 px-2 text-gray-700 font-semibold hover:text-green-500 transition duration-300">About</a>
                        </div>
                    </div>
                    <!-- Secondary Navbar items -->
                    <div class="hidden md:flex items-center space-x-3 ">
                        <img src="/images/user.png" alt="profile picture"
                        class="rounded-full h-10 w-10">
                        <a class="font-medium text-white bg-green-500 px-2 py-1 rounded hover:bg-green-400 transition duration-300"
                            href="/logout">Logout</a>
                    </div>

                    <!-- Mobile menu button -->
                    <div class="md:hidden flex items-center">
                        <button class="outline-none mobile-menu-button">
                            <svg class=" w-6 h-6 text-gray-500 hover:text-green-500 " x-show="!showMenu" fill="none"
                                stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>

                </div>
            </div>
            <!-- Mobile Menu Items-->
            <div class="hidden mobile-menu">
                <ul class="">
                    <li class="active"><a href="/"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">Resources</a>
                    </li>
                    <li><a href="/qa"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">QA
                            Forum</a>
                    </li>
                    <li><a href="/article"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">Technical
                            Articles</a>
                    </li>
                    <li><a href="/schedule"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">Schedule</a>
                    </li>
                    <li><a href="/event"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">Events</a>
                    </li>
                    <li><a href="/about"
                            class="block text-sm px-2 py-4 hover:bg-green-500 transition duration-300">About</a>
                    </li>
                </ul>
            </div>
            <script>
                const btn = document.querySelector("button.mobile-menu-button");
                const menu = document.querySelector(".mobile-menu");

                btn.addEventListener("click", () => {
                    menu.classList.toggle("hidden");
                });
            </script>
        </nav>
    </header>
    <!-- Header ends here -->